              #imageareaContent
                - i = 1
                - while i < 15  do
                  %img{:src => "assets/about/gallery/1_#{i}.jpg"}
                  - i +=1;
          #scrollGalleryHead
            #thumbarea
              #thumbareaContent
                - i = 1
