.main
  #contacts_page
    .pics_module
    .middle_with_citat
      .red_line
        .middle_full_block
          %h1 КОНТАКТНЫЕ ДАННЫЕ
    .text_module
      %table
        %tr
          %td Адрес:
          %td
            = @contact.address
        %tr
          %td Телефон:
          %td
            = @contact.phone
        %tr
          %td Факс:
          %td
            = @contact.fax
        %tr
          %td E-mail:
          %td
            - emails_list = split_emails(@contact.emails)
            - emails_list.each_with_index do |value, index|
              %a{:href => "mailto:"+value}
                - if (index+1) < emails_list.size
                  = value+", "
                - else
                  = value
