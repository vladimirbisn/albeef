- @menu = {0 => {:name => "О Компании", :link => "about"},
           1 => {:name => "Продукция", :link => "production"},
           2 => {:name => "Новости", :link => "news"},
           3 => {:name => "Вакансии", :link => "jobs"},
           4 => {:name => "Контакты", :link => "contacts", :class => "last"}}

- @menu.each do |key, value|
  - activePageClassName = ""
  - if controller.controller_name == value[:link]
    - activePageClassName = "active"
  %li.cf{:class =>  "#{value[:class]} #{activePageClassName}" }
    = link_to "#{value[:name]}", "/#{value[:link]}"
