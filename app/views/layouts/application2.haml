!!!
%html{:lang => "ru"}
  %head
    %title Albeef
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .container
      .thin_red_line
        .middle
      .header
        .main_header
          .inside_block
            .top_part
              %a.logo{:href => "/"}
                %img{:src => "assets/layout/logo.png"}
              %ul.menu
                - menu = {0 => {:name => "О КОМПАНИИ",:name_small_letter =>"О Компании", :link => "about"}, 1 => {:name => "ПРОДУКЦИЯ",:name_small_letter =>"Продукция", :link => "production"}, 2 => {:name => "НОВОСТИ", :name_small_letter => "Новости", :link => "news"}, 3 => {:name => "ВАКАНСИИ", :name_small_letter =>"Вакансии", :link => "jobs"}, 4 => {:name => "КОНТАКТЫ", :name_small_letter => "Контакты", :link => "contacts", :class => "last"}}
                - menu.each do |key, value|
                  - if !value[:class]
                    %li{:class =>  ("active" if controller.controller_name == value[:link])}
                      %a{:href => "/#{value[:link]}" }
                        = value[:name]
                  - else
                    %li.last{:class =>  ("active" if controller.controller_name == value[:link])}
                      %a{:href => "/#{value[:link]}" }
                        = value[:name]
      .main
        = yield
      .footer
        .middle
          .middle_wrap
            .copyrights
              %ul
                - menu.each do |key, value|
                  - if !value[:class]
                    %li{:class =>  ("active" if controller.controller_name == value[:link])}
                      %a{:href => "/#{value[:link]}" }
                        = value[:name_small_letter]
                  - else
                    %li.last{:class =>  ("active" if controller.controller_name == value[:link])}
                      %a{:href => "/#{value[:link]}" }
                        = value[:name_small_letter]
              %p &copy; 2012 ООО «АЛБИФ». Все права защищены.
            .footer_logo